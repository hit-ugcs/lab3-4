<h1>Grading Worksheet</h1>

<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Student Name<br />(Chinese)</th>
        <th>Nick Name<br />(English)</th>
        <th>Project(40%)</th>
        <th>Fina(40%)</th>
        <th>Lab(10%)</th>
        <th>Class(10%)</th>
        <th>Final</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.studentid %></td>
          <td><%= student.studentname %></td>
          <td><%= student.nickname %></td>
          <td><%= student.projectscore %>%</td>
          <td><%= student.finalscore %>%</td>
          <td><%= student.labscore %>%</td>
          <td><%= student.classscore %>%</td>
          <td><%= student.final %>%</td>
          <td>
            <%= link_to '', student, class: "fa fa-eye" %>
            <%= link_to '', edit_student_path(student), class: "fa fa-pencil-square-o" %>
            <%= link_to '', student, class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div class="lk">
  <%= will_paginate @students, renderer: BootstrapPagination::Rails %>
</div>

  <div class="lk">
    <button type="button" id="new" class="fa fa-plus-square-o btn btn-primary btn-lg"> New Row</button>
    <%= link_to ' New Student', new_student_path, class: "fa fa-mortar-board btn btn-primary btn-lg" %>
    <%= link_to ' Preview and Print', new_student_path, class: "fa fa-print btn btn-primary btn-lg" %>
  </div>

  
</div>

<div id="for-form"></div>
